<ol class="member-list clearfix">
  <% members.each do |member| %>
    <li class="member-list-item">
      <%= link_to member_path(member.name) do %>
        <%= image_tag member.final_avatar_url, alt: "uprofile", :class => "gavatar" %>
      <% end %>
      <div class="member-list-container">
        <h3 class="member-name">
          <%= link_to member_path(member.name) do %>
            <%= member.name.truncate(16) %>
          <% end %>
        </h3>
        <p class="courses">已咨询: <%= member.courses.count %></p>
        <p class="comments">待咨询: <%= member.comments.count %></p>
        <p class="join-date">登陆时间: <%= member.created_at.strftime("%Y-%m-%d") %></p>
      </div>
    </li>
  <% end %>
</ol>
