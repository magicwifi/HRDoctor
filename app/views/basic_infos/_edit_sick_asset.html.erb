<script>
  jQuery(function($) {
    var updateVideoForm;
    updateVideoForm = $("form#update-video-uploader");
    if (updateVideoForm.length > 0) {
      updateVideoForm.QiniuUploader({
        autoUpload: true,
        singleFileUploads: true,
        removeProgressBarWhenCompleted: false,
        onFilesAdd: function(file) {
          types = /(\.|\/)(jpg|png|mov|mp4)$/i;
          if (types.test(file.type) || types.test(file.name)) {
            if (file.size > 100000000) {
              alert("上传失败：" + file.name + " 附件太大，超过100M");
              return false;
            } else {
              return true;
            }
          } else {
            alert("上传失败：" + file.name + " 附件格式错误，请上传mov或mp4文件");
            return false;
          }
        }
      });
      updateVideoForm.bind("qiniu_upload_start", function(e) {
        $('#submit_sick_asset_info').attr('value', '附件正在上传');
        $('#submit_sick_asset_info').attr('disabled', 'true');
        $('a.fileupload-btn').bind('click', false);
      });
      updateVideoForm.bind("qiniu_upload_complete", function(e, data) {
        $('#submit_sick_asset_info').attr('value', '保存附件信息');
        $('#submit_sick_asset_info').removeAttr('disabled');
        $('#progress-text').html("附件上传成功！");
        $('#video-filename').html("附件文件名： " + "<strong>" + data.fname + "</strong>");
      });
    }
  });
</script>
<div class="add-video-box clearfix">
  <div class="video-delete-btn">
    <%= link_to "删除本附件", sick_asset, :method => "delete", :remote=> true, class: "danger minibutton",
      :confirm => t('confirm_delete') %>
  </div>
  <div class="secondary-info">
    <ul class='upload-tip'>
      <li>附件大小：最大100M</li>
      <li>格式支持：xxx</li>
      <li>说明1  </li>
      <li>说明2 </li>
    </ul>
    <p id="video-filename">查看文件: <a href="http://<%= Settings.qiniu.bucket_domain %>/<%= sick_asset.asset %>"><%= sick_asset.filename %></a></p>
    <%= qiniu_video_uploader_form callback_url: "/update_sick_asset/#{sick_asset.id}",
      callback_method: 'PATCH',
      bucket:        "#{Settings.qiniu.bucket}",
      id:            'update-video-uploader',
      progress_bar_id: 'progress-bar' do %>

      <a class="fileupload-btn fileupload-video">
        <i class="fileupload-icon fa fa-upload"></i>
        <input id="fileupload" name="file" type="file">
        <span id="upload-button-text">更新附件</span>
      </a>
      <div class="bar" id="progress-bar"></div>
    <% end %>

    <script id="template-upload" type="text/x-tmpl">
      <div class="upload">
        {%=o.name%}
        <div class="progress">
          <span id="progress-text">附件正在上传...</span>
          <div class="bar" style="width: 0%"></div>
        </div>
      </div>
    </script>
  </div>
  <div class="third-info"></div>
  <div class="primary-info">
    <%= form_for(sick_asset,:remote =>true) do |f| %>
      <dl class="form">
        <dt>
          <%= f.hidden_field :id %>
          <%= f.label '病历标题' %>
        </dt>
        <dd><%= f.text_field :title, id: "video-title" %></dd>
      </dl>
      <dl class="form">
        <dt><%= f.label '症状简要描述' %></dt>
        <dd>
          <%= f.text_area :desc, id: "video-desc", class: "long short", rows: '8' %>
        </dd>
      </dl>
      <dl class="form">
        <dt><%= f.label '选择附件类型' %></dt>
        <dd>
          <%= f.select(:asset_type,'<option value="CT" >影相科(CT)相关检查</option><option value="exper" >实验室相关检查</option><option value="heart" >心电图相关检查</option>'.html_safe, {}, { :class => 'supershort' } ) %>  
        </dd>
      </dl>
      <div class="video-button-group">
        <%= f.submit t('update_video_info'), class: "button",
          data: { disable_with: t('video_saving') + "..." },
          id: "submit_sick_asset_info" %>
      </div>
    <% end %>
  </div>
</div>
