<div class="about-main">
   <button class="primary button" onclick="history.go(-1)" >返回付款页面</button>
    <p style="height: 30px;" ></p>
    <h1>一般信息</h1>
    <hr>
<dl class="dl-horizontal">
      <dt>主诉 : </dt>
      <dd><%= @basic_case.main_desc %></dd>
      <dt>详细描述 : </dt>
      <dd><%= @basic_case.detail_desc %></dd>
      <dt>诊疗经过 : </dt>
      <dd><%= @basic_case.treat_desc %></dd>
      <dt>目前情况 : </dt>
      <dd><%= t(@basic_case.now_desc) %></dd>
    </dl>
    <p style="height: 70px;" ></p>
    
    <h1>体征信息</h1>
    <hr>
<dl class="dl-horizontal">
      <dt>体温 : </dt>
      <dd><%= @basic_case.body_sign.temperature %></dd>
      <dt>脉搏 : </dt>
      <dd><%= @basic_case.body_sign.pulse %></dd>
      <dt>高压 : </dt>
      <dd><%= @basic_case.body_sign.high_pressure %></dd>
      <dt>低压 : </dt>
      <dd><%= @basic_case.body_sign.low_pressure %></dd>
      <dt>双下肢是否肿胀 : </dt>
      <dd><%= (@basic_case.body_sign.swelling.nil? or @basic_case.body_sign.swelling.blank?) ? "否": t(@basic_case.body_sign.swelling) %></dd>
      <dt>其他体征 : </dt>
      <dd><%= t(@basic_case.body_sign.status_name.split)  %></dd>
    </dl>
    <p style="height: 70px;" ></p>

    <% @basic_case.sick_assets.each do |sick_asset| %>
    <p style="height: 40px;" ></p>
    <h3> 附件名称 : <%= sick_asset.title %> </h3>
    <hr>
<dl class="dl-horizontal">
      <dt>附件描述 : </dt>
      <dd><%= sick_asset.desc %></dd>
      <dt>附件类型 : </dt>
      <dd><%= t(sick_asset.asset_type) %></dd>
      <dt>查看附件 : </dt>
      <dd><a href="http://<%= Settings.qiniu.bucket_domain %>/<%= sick_asset.asset %>"><%= sick_asset.filename %></a></dd>
    </dl>
<div class="download-btn">
  <%= link_to '下载咨询附件', download_sick_hist_path(:asset => sick_asset.asset), class: "minibutton primary" %>
</div>
     <% end %>

</div>
