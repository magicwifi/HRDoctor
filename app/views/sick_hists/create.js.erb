$('form#new_sick_hist').get(0).setAttribute("action", "/sick_hists/<%= @sick_hist.id %>");
$('form#new_sick_hist > div').append('<input name="_method" type="hidden" value="put">');
$('.playlist-container').replaceWith("<%= escape_javascript render 'basic_infos/all_added_sick_hists', :user=>@user %>");
$('.add-video-box').replaceWith("<%= escape_javascript render 'basic_infos/edit_sick_hist', :sick_hist => @sick_hist %>");
$('.playlist li a.video').removeClass('active');
$('.playlist li').removeClass('selected');
$('.playlist li a.video').eq(<%= @sick_hist.position - 1 %>).addClass('active');
$('.playlist li').eq(<%= @sick_hist.position - 1 %>).addClass('selected');
$('input#submit_sick_hist_info').removeAttr('disabled');
$('input#submit_sick_hist_info').get(0).setAttribute('value', '保存病史信息');
